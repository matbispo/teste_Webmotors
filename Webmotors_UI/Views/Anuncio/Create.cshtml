@model Webmotors.Application.Model.AnuncioModel

@{
    ViewBag.Title = "Criar Anuncio";
}

<h2>Criar Anuncio</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Anuncio</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.marca, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m=> m.marca, new SelectList(ViewBag.Marca, "ID", "Name"), String.Empty, new { @class = "form-control", @id = "marcaID"} )
                @Html.ValidationMessageFor(model => model.marca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.modelo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="modeloID" name="modelo" class="form-control"></select>
                @Html.ValidationMessageFor(model => model.modelo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.versao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="versaoID" name="versao" class="form-control"></select>
                @Html.ValidationMessageFor(model => model.versao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ano, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ano, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ano, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.kilometragem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.kilometragem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kilometragem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

}
<script src="@Url.Content("~/Scripts/jquery-3.3.1.js")" type="text/javascript"></script>

<script type="text/javascript" language="javascript">

    $('#marcaID').change(function () {

        var url = "GetModelo";

        var id = $(this).val();

        if (id !== "") {
            $.ajax({
                type: 'GET',
                cache: false,
                url: url,
                data: { id: id },
                dataType: 'json',
                complete: function (data) {
                    $('#modeloID').find('option').remove();

                    var modelos = JSON.parse(data.responseText);

                    var modeloElements = $("#modeloID");

                    var option = $("<option />");

                    option.html("");

                    option.val(-1);

                    modeloElements.append(option);

                    $(modelos).each(function () {

                        var option = $("<option />");
                        
                        option.html(this.Name);

                        option.val(this.ID);

                        modeloElements.append(option);
                    });
                }
            })
        }
        else {
            $('#modeloID').find('option').remove();
            $('#versaoID').find('option').remove();
        }
    });


    $('#modeloID').change(function () {

        var url = "GetVersao";

        var id = $(this).val();

        if (id !== -1) {
            $.ajax({
                type: 'GET',
                cache: false,
                url: url,
                data: { id: id },
                dataType: 'json',
                complete: function (data) {
                    $('#versaoID').find('option').remove();

                    var modelos = JSON.parse(data.responseText);

                    var versaoElements = $("#versaoID");

                    var option = $("<option />");

                    option.html("");

                    option.val(-1);

                    versaoElements.append(option);

                    $(modelos).each(function () {

                        var option = $("<option />");

                        option.html(this.Name);

                        option.val(this.ID);

                        versaoElements.append(option);
                    });
                }
            })
        }
        else {
            $('#versaoID').find('option').remove();
        }
    });

</script>